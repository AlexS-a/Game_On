<div class="bookings" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path("AllGames.png", width: 800, height: 500, crop: :thumb) %>)">
  <div class="container remove-margin">
  <h2 class="text-center">Here are all of your bookings...</h2>
    <div class="row">
      <% if current_user.bookings.count >= 1 %>
        <% current_user.bookings.each do |booking| %>
          <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
            <%= link_to booking_path(booking) do %>
            <div class="booking-cards">
              <div class="results-card">
              <%= cl_image_tag booking.game.photo %>
                <div class="results-card-description">
                  <h1><%= link_to booking.game.name, booking_path(booking) %></h1>
                  <p><%= booking.status %></p>
                </div>
              </div>
            </div>
          <% end %>
          </div>
        <% end %>
      <% elsif current_user.bookings.nil?  %>
        <%= link_to booking_path(current_user.bookings.first) do %>
            <div class="booking-cards">
              <div class="results-card">
              <%= cl_image_tag current_user.bookings.first.game.photo %>
                <div class="results-card-description">
                  <h1><%= link_to current_user.bookings.first.game.name, booking_path(current_user.bookings.first) %></h1>
                  <p><%= current_user.bookings.first.status %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>>
    </div>
  </div>
  <p class="text-center returned"><%= link_to "To Games Search", games_path, class: "btn btn-primary" %></p>
</div>

