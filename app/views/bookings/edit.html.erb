<h1>Edit booking for <%= @booking.game.name.capitalize %></h1>

<%= simple_form_for [@game, @booking] do |f| %>
  <%= f.input :rent_start %>
  <%= f.input :rent_end %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Back to your booking", booking_path(@booking) %>
<%= link_to "Delete this booking", booking_path(@booking), method: :delete %>
