<div class="banner-bookings" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path("Pac-Man2.jpg",
      width: 300, height: 200, crop: :thumb) %>)">
  <div class="banner-content">
    <div class="container-bookings text-center">
      <div class="booking-title">
        <h1>Editing your booking for <%= @game.name.capitalize %></h1>
      </div>

      <div class ="detailed-form">
        <%= simple_form_for [@game, @booking] do |f| %>
          <%= f.input :rent_start, input_html: {class: "rent"} %>
          <%= f.input :rent_end, input_html: {class: "rent"} %>
          <%= f.button :submit, value:"Confirm Booking", class: "btn btn-success calender" %>
        <% end %>
        <p class="text-center"><%= link_to "Back to all bookings", bookings_path, class: "btn btn-primary" %></p>
        <p class="text-center"><%= link_to "Delete Bookings", booking_path(@booking), method: :delete, class: "btn btn-danger" %></p>
      </div>
    </div>
  </div>
</div>
