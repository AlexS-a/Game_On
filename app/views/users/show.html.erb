<h1><%= @user.user_name %></h1>

<h3>These are your game up for rent</h3>
<ul>
  <% @user.games.each do |game| %>
  <li>
    <p><%= game.name %></p>
  </li>
  <% end %>
</ul>

<% if @user == current_user %>
<h3>People who have sent you a booking request</h3>
<ul>
  <% @user.games.each do |game| %>
    <% game.bookings.each do |booking| %>
  <li>
    <p>
      <%=link_to booking.user.user_name, user_path(@user) %>
      whats to rent
      <%= booking.game.name %>
      for <%= booking.rent_start %>
      to <%= booking.rent_end %>
      status:
      <%= booking.status %>
    </p>
      <a href="" class="btn-xs btn-danger"><%= booking.declined_booking %></a>
      <a href="" class="btn-xs btn-success"><%= booking.accept_booking %></a>
  </li>
  <% end %>
  <% end %>
</ul>
<% end %>
