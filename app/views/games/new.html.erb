
<div class="container game form">

  <h1>Create a new game rental</h1>

  <%= simple_form_for @game do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :genre, collection: Game::GENRES, prompt: "Pick a genre", class: "form-field"  %>
    <%= f.input :location %>
    <%= f.input :platform, collection: Game::PLATFORMS, prompt: "Select a platform", class: "form-field" %>
    <%= f.input :price %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: "btn btn-success" %>
  <% end %>
  <br>
  <%= link_to "Back", games_path, class: "btn btn-primary form-back" %>
</div>

