<div class="container">
  <div class="edit-game form">
    <h1>Edit your game rental</h1>

      <%= simple_form_for @game do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :genre, collection: Game::GENRES, prompt: "Pick a genre", class: "form-field"  %>
        <%= f.input :location %>
        <%= f.input :platform, collection: Game::PLATFORMS, prompt: "Select a platform", class: "form-field" %>
        <%= f.input :price %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
      <br>
      <%= link_to "Back", user_path(@game.user), class: "btn btn-primary form-back" %>
  </div>
</div>



