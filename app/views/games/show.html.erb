<div class="container game">
  <div class="game-flex">
    <div class="game-image" style="background-image: url(<%= cl_image_path @game.photo %>);">
    </div>
    <div class="game-details">
      <h1><%= @game.name %></h1>
      <p id="description"><%= @game.description%></p>
      <p id="genre">Genre:<%= @game.genre %></p>
      <div class="pricing">
        <p class="price">Â£<%= @game.price %>/pw</p>
        <%= link_to "Rent",  new_game_booking_path(@game), class: "btn btn-primary game-show" %>
      </div>
      <div class="icon-stuff">
        <p id="platform-text">Platform:</p>
        <p class="location">Location: <%= @game.location %></p>
      </div>
      <div class="show-icon"><i class="<%= @game.find_icon %>"></i></div>
    </div>
  </div>



  <%= link_to "Back", games_path, class: "btn btn-warning back-to-search" %>


  <% game_id = [] %>
  <% @game.users.each do |user| %>
    <% game_id << user.id%>
  <% end %>
  <% if user_signed_in? %>
  <%= link_to "Create a review", new_game_review_path(@game) if game_id.include?(current_user.id)%>
  <% end %>

  <ul>
    <% @game.reviews.each do |review| %>
    <li>
      <%= review.name %>
      <br>
      <%= review.comment %>
      <br>
      <%= review.rating %>
      <br>
      <%= review.user.user_name %>
      <br>
      <%= link_to "Delete", review_path(review), method: :delete if current_user == review.user %>
      </li>
      <% end %>
  </ul>


  <div class="reviews">
      <svg style="display: inline-block;" height="10" width="100">
        <line x1="0" y1="0" x2="200" y2="0" style="stroke:rgba(0,0,0,0.3);stroke-width:2" />
      </svg>
