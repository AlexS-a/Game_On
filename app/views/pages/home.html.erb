<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path("Video_gamers_on_couch.jpg",
      width: 300, height: 300, crop: :thumb) %>)">
  <div class="banner-content">
    <h1>Game On</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
   <% if user_signed_in?  %>
    <% else %>
     <p style="margin-top: 40px;"><%= link_to "Sign up", new_user_registration_path, class:"btn-lg btn-primary" %></p>
    <% end %>
  </div>
</div>


<div class="container-banner text-center">
 <div class="flex">
   <h2 class="text-center">Search for your next game?</h2>
    <div class="search">
      <%= form_tag games_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Go", :name => nil %>
        </p>
      <% end %>
    </div>
  </div>
</div>


